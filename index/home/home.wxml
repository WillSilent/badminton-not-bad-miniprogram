<view class="container">
  <!-- 视频部分 -->
  <view class="video-wrapper">
    <video
      id="videoPlayer"
      src="{{videos[currentIndex].url}}"
      autoplay
      controls
      loop="{{false}}"
      bindended="onVideoEnded"
      show-center-play-btn
      object-fit="cover"
      bindfullscreenchange="onFullScreen"
    ></video>
  </view>

  <!-- 右侧互动按钮 -->
  <view class="interaction-right">
    <view class="avatar-wrapper">
      <image class="user-avatar" src="{{videos[currentIndex].userAvatar}}" class="avatar"></image>
      <view class="follow-btn" bindtap="onFollow">{{isFollowed ? '✔' : '+'}}</view>
    </view>
    <view class="action-btn like" bindtap="onLike">
      <image src="/image/white_like_icon.png" class="action-icon"/> 
      <text class="action-text">{{videos[currentIndex].likes}}</text>
    </view>
    <view class="action-btn comment" bindtap="onComment">
      <image src="/image/white_comment_icon.png" class="action-icon"/> 
      <text class="action-text">{{videos[currentIndex].comments}}</text>
    </view>
    <view class="action-btn collect" bindtap="onCollect">
      <image src="/image/white_collect_icon.png" class="action-icon"/> 
      <text class="action-text">{{videos[currentIndex].collects}}</text>
    </view>
    <view class="action-btn share" bindtap="onShare">
      <image src="/image/white_share_icon.png" class="action-icon"/> 
      <text class="action-text">{{videos[currentIndex].shares}}</text>
    </view>
  </view>

  <!-- 底部信息部分 -->
  <view class="bottom-info">
    <view class="left-info">
      <text class="user-name">{{videos[currentIndex].userName}}</text>
      <text class="location">{{videos[currentIndex].location}}</text>
    </view>
    <view class="video-title">{{videos[currentIndex].title}}</view>
  </view>

  <!-- 全屏按钮 -->
  <view class="fullscreen-btn" bindtap="onFullScreen">
    <image src="/image/fullscreen_icon.png" class="fullscreen-icon"/> 全屏观看
  </view>
  
  <!-- 退出全屏按钮（仅在全屏模式下显示） -->
  <view wx:if="{{isFullScreen}}" class="exit-fullscreen-btn" bindtap="exitFullScreen">
    <text>退出全屏</text>
  </view>
</view>
