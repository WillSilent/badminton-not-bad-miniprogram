/* 顶部按钮样式 */
.top-buttons {
  display: flex;
  justify-content: space-between;
  position: fixed;
  top: 5%;  
  width: 90%;  
  left: 5%;  
  z-index: 200;  
}

button {
  background-color: white;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 5px;
  flex: 1;
  text-align: center;
  margin: 0 5px;  
}

button.active {
  background-color: gray;
}

/* 比赛表格样式 */
.match-result-section {
  padding: 10px;
  background-color: #f5f5f5;
  text-align: center;
  width: 90%;
  margin-bottom: 10px;
}

.table-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
  width: 100%;
  height: 40px;
}

.input-id, .input-score {
  width: 30%;  
  padding: 5px;
  border: 1px solid #ccc;
  text-align: center;
}

.table-colon {
  width: 10%;  
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: bold;
  line-height: 40px;
}

/* 约比赛部分样式 */
.match-section {
  margin-top: 40%;  
  display: flex;
  flex-direction: column;
  align-items: center;
}

.match-type-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
}

.select-category, .select-format {
  border: 1px solid #ccc;
  padding: 10px;
  margin: 10px 0;
  width: 90%;
  text-align: center;
}

/* 注册部分样式 */
.register-section {
  margin-top: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

input {
  width: 90%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
}

/* 月度排名表格样式 */
.rank-section {
  margin-top: 25%;
}

.rank-table {
  margin-bottom: 20px;
  width: 90%;
  margin-left: 5%;
}

.table-header {
  font-weight: bold;
  font-size: 16px;
  margin-bottom: 10px;
}

.table-row {
  display: flex;
  justify-content: space-between;
  padding: 10px;
}

.table-row.header {
  font-weight: bold;
}

.table-row.highlight {
  background-color: yellow;
}

.no-data {
  text-align: center;
  margin-top: 20px;
  color: #999;
}

/* 筛选部分 */
.filters {
  display: flex;
  justify-content: space-between;
  padding: 20px 5%;
  width: 90%;
}

.filters picker {
  flex: 1;
  margin: 0 5px;
  text-align: center;
  border: 1px solid #ccc;
  padding: 10px;
}
